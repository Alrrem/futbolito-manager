@model FutbolitoManager.Models.SprintReview
@using FutbolitoManager.Models
@{
    ViewData["Title"] = "Editar Review";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SprintId" class="control-label">Sprint</label>
        <select asp-for="SprintId" class="form-control" asp-items="ViewBag.Sprints"></select>
    </div>

    <div class="form-group">
        <label asp-for="Fecha" class="control-label">Fecha</label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="ComentariosPO" class="control-label">Comentarios PO</label>
        <textarea asp-for="ComentariosPO" class="form-control"></textarea>
    </div>

    <div class="form-group form-check">
        <input asp-for="Aprobado" class="form-check-input" type="checkbox" />
        <label asp-for="Aprobado" class="form-check-label">Aprobado</label>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
