@model FutbolitoManager.Models.SprintReview
@using FutbolitoManager.Models

@{
    ViewBag.Title = "Editar Sprint Review";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="SprintId" class="form-label">Sprint</label>
        <select asp-for="SprintId" class="form-select" asp-items="ViewBag.Sprints"></select>
    </div>
    <div class="mb-3">
        <label asp-for="ComentariosPO" class="form-label">Comentarios del PO</label>
        <textarea asp-for="ComentariosPO" class="form-control"></textarea>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Aprobado" class="form-check-input" type="checkbox" />
        <label asp-for="Aprobado" class="form-check-label">Aprobado</label>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
