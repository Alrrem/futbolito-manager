@{
    ViewBag.Title = "Login Administrador";
}

<div style="padding: 50px; max-width: 400px; margin: auto; font-family: Arial;">
    <h2 style="text-align: center;">Acceso administrador</h2>

    <!-- Agregamos autocomplete="off" al form -->
    <form method="post" action="/Home/Login" autocomplete="off">
        <label>Email:</label>
        <!-- Forzamos autocomplete="off" y value vacío -->
        <input type="email"
               name="email"
               required
               autocomplete="off"
               value=""
               style="width: 100%; padding: 10px; margin-bottom: 10px;" />

        <label>Contraseña:</label>
        <!-- Usamos new-password para evitar relleno de contraseña -->
        <input type="password"
               name="password"
               required
               autocomplete="new-password"
               value=""
               style="width: 100%; padding: 10px; margin-bottom: 20px;" />

        <button type="submit"
                style="width: 100%; padding: 12px; background-color: #00796b; color: white; border: none; border-radius: 8px;">
            Iniciar sesión
        </button>

        @* Mostrar mensaje de error solo si existe *@
        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="alert alert-danger" role="alert" style="margin-top: 15px;">
                @ViewBag.Error
            </div>
        }
    </form>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a href="/Home/Index" style="font-size: 16px; text-decoration: none; color: #00796b;">
        ← Volver a la página principal
    </a>
</div>
