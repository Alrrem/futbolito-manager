@model FutbolitoManager.Models.SprintRetrospective
@using FutbolitoManager.Models

@{
    ViewData["Title"] = "Editar Retrospectiva";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SprintId" class="control-label">Sprint</label>
        <select asp-for="SprintId" class="form-control" asp-items="ViewBag.Sprints"></select>
    </div>

    <div class="form-group">
        <label asp-for="Fecha" class="control-label">Fecha</label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="LoQueFuncionó" class="control-label">Lo que Funcionó</label>
        <textarea asp-for="LoQueFuncionó" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="LoQueNoFuncionó" class="control-label">Lo que No Funcionó</label>
        <textarea asp-for="LoQueNoFuncionó" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="AccionesMejora" class="control-label">Acciones de Mejora</label>
        <textarea asp-for="AccionesMejora" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
