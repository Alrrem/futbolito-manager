@model FutbolitoManager.Models.SprintRetrospective

@{
    ViewBag.Title = "Nueva Retrospective";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="SprintId" class="form-label">Sprint</label>
        <select asp-for="SprintId" class="form-select" asp-items="ViewBag.Sprints">
            <option value="">-- Seleccione un sprint --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LoQueFuncionó" class="form-label">Lo que funcionó</label>
        <textarea asp-for="LoQueFuncionó" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="LoQueNoFuncionó" class="form-label">Lo que no funcionó</label>
        <textarea asp-for="LoQueNoFuncionó" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="AccionesMejora" class="form-label">Acciones de mejora</label>
        <textarea asp-for="AccionesMejora" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
