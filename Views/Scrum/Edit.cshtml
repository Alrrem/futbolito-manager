@model FutbolitoManager.Models.UserStory
@using FutbolitoManager.Models

@{
    ViewBag.Title = "Editar Historia";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Título</label>
        <input asp-for="Title" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Descripción</label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="StoryPoints" class="form-label">Puntos</label>
        <input asp-for="StoryPoints" type="number" min="1" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Estado</label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StoryStatus>()"></select>
    </div>
    <div class="mb-3">
        <label asp-for="SprintId" class="form-label">Sprint</label>
        <select asp-for="SprintId" class="form-select" asp-items="ViewBag.Sprints">
            <option value="">-- Sin asignar --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
